<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loaded_data"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ic_wave_11"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/Firebase"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_back"
        android:onClick="Change"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/Firebase"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/firebaseicon" />

    <TextView
        android:id="@+id/LoadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Firebase"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Fetched Data Here"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_wave_10"
        />
</RelativeLayout>